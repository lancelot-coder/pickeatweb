<div class="form-group">
  <% if f.object.photo.exists? %>
    <br/>
    <%=image_tag f.object.photo.url(:thumb), width: 100, class: 'img-responsive' %>
    <br/>
  <% end %>
  <%=f.label :photo %>
  <%=f.file_field :photo, accept:'image/*', class: 'form-control' %>
</div>
<div class="form-group">
  <%=f.label :primary %>
  <%=f.check_box :primary %>
</div>
<div class="form-group">
  <%=f.submit 'Submit', class: 'btn btn-danger' %>
  <%=link_to 'Cancel', restaurant_restaurant_photos_path(@restaurant), class: 'btn btn-default' %>
</div>