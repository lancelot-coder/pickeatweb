<style>
.form-width {
  margin-top: 10px;
  width: 300px;
}
.well-bg {
  font-size: 25px;
  margin-bottom: 20px;
  color: #FF0000;
}
.well-nbg {
  margin-top: 10px;
  background-color: none;
}
.p-terms {
  font-size: 12px;
}
.p-align {
  text-align: center;
}
</style>
<div class="container form-width">
      <h1 class="well-bg p-align"><strong>Log In to Pick Eat</strong></h1>
      <p class="p-align"><strong>Where finding food matters</strong></p>
      <p class="p-align">New to Pick Eat? <%= link_to "Sign up", new_user_registration_path %></p>
      <p class="p-terms p-align">By logging in, you agree to Pick Eatâ€™s <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</p>
  	<div class="col-lg-12 well-nbg">
  	<div class="row">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="col-sm-12 ">
              <div class="form-group">
                <label>Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' , :class => "form-control"%>
              </div>
              <div class="form-group">
                <label>Password</label>
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' , :class => "form-control"%>
                </div>
                <%= f.submit "Log in", class: 'btn btn-md btn-danger' %>
              <% end %>
              <br><br>
              <%= render "devise/shared/links" %>
              <br><br>
            </div>
              	</div>
          </div>
      </div>
