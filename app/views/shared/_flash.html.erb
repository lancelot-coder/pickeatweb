<div class="row">
  <div class="col-md-12">
    <% flash.each do |name, msg| %>
      <% if name == :notice %>
        <div class="alert alert-success">
          <p><%=msg.html_safe%></p>
        </div>
      <% else %>
        <div class="alert alert-danger">
          <p><%=msg.html_safe%></p>
        </div>
      <% end %>
      
    <% end %>
  </div>
</div>
</div>

<% flash.discard %>